<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<BorderPane prefHeight="449.0" prefWidth="630.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
   <center>
      <VBox prefHeight="200.0" prefWidth="100.0" spacing="5.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Patient ID:" />
            <TextField fx:id="patient_id" editable="false" />
            <Label fx:id="patientName_label" prefHeight="31.0" prefWidth="349.0" text="Date Prescribed:" />
            <TextField fx:id="date_TF" promptText="mm-dd-yyyy" />
            <Label fx:id="medication_label" text="Medication:" />
            <TextField fx:id="medication_TF" />
            <Label fx:id="notes_label" text="Notes:" />
            <TextArea fx:id="notes_TF" prefHeight="69.0" prefWidth="481.0" wrapText="true" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <BorderPane.margin>
            <Insets left="30.0" right="30.0" top="10.0" />
         </BorderPane.margin>
      </VBox>
   </center>
   <bottom>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
         <children>
            <Button fx:id="back_Button" alignment="CENTER" mnemonicParsing="false" onAction="#back_clicked" prefHeight="25.0" prefWidth="64.0" text="Back" />
            <Button fx:id="confirm_button" mnemonicParsing="false" onAction="#confirm_clicked" prefHeight="25.0" prefWidth="73.0" text="Confirm" />
         </children>
      </HBox>
   </bottom>
   <top>
      <Label fx:id="orderPrescription_label" prefHeight="40.0" prefWidth="197.0" text="Examine Patient" BorderPane.alignment="TOP_LEFT">
         <font>
            <Font name="System Bold" size="23.0" />
         </font>
         <padding>
            <Insets left="10.0" />
         </padding>
         <BorderPane.margin>
            <Insets left="20.0" top="20.0" />
         </BorderPane.margin>
      </Label>
   </top>
</BorderPane>
